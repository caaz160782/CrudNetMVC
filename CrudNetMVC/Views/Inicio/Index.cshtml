@model IEnumerable<CrudNetMVC.Models.Contacto>

@{
    ViewData["Title"] = "Lista de Contactos";
}

<h1 class="text-center">
    Contacto MVC 
</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="row"> 
    <div class="offset-12">
        <div class="card-border">
            <div class="card-header bg-dark">
                <h3 class="text-white"> <strong>Lista de Usuarios </strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() >0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0"> 
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id) </th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre) </th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono) </th>
                                    <th>@Html.DisplayNameFor(m => m.Celular) </th>
                                    <th>@Html.DisplayNameFor(m => m.Email) </th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion) </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id) </td>
                                    <td>@Html.DisplayFor(m => item.Nombre) </td>
                                    <td>@Html.DisplayFor(m => item.Telefono) </td>
                                    <td>@Html.DisplayFor(m => item.Celular) </td>
                                    <td>@Html.DisplayFor(m => item.Email) </td>
                                    <td>@Html.DisplayFor(m => item.FechaCreacion) </td>    
                                    <td>
                                            <a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-secondary">
                                                <i class="fa-solid fa-circle-info"></i>
                                            </a>
                                            <a asp-action="Editar"  asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a asp-action="Eliminar"  asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                         <!--   <button class="btn btn-danger" onclick="confirmarEliminar(@item.Id)">
                                                <i class="fa fa-trash"></i> Eliminar
                                               </button>-->
                                    </td>
                                </tr>    
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
   function confirmarEliminar(id) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "¡No podrás revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redireccionar para eliminar
                window.location.href = '/Inicio/Eliminar/' + id;
            }
        })
    }
</script>
