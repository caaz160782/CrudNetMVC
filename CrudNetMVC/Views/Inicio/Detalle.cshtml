@model CrudNetMVC.Models.Contacto

@{
    ViewData["Title"] = "Detalle Contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card-border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle Usuario</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" /> <!-- Asegúrate de tener el ID oculto para identificar al contacto -->

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" disabled />
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresa el Telefono" disabled />                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" placeholder="Ingresa el Celular" disabled />                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el Email" disabled />                        
                    </div>         

                </form>

                <a asp-action="Index" asp-controller="Inicio" class="d-block mt-3 text-center">
                    <i class="fa-solid fa-arrow-left"></i> Regresar
                </a>

            </div>
        </div>
    </div>
</div>
